<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CircleK</title>
</head>
<body>
    <h1>Calculate Circumference and Area of a Circle</h1>
    <form id="circleForm">
        <label for="radius">Enter Radius:</label>
        <input type="number" id="radius" name="radius" required>
        <button type="button" onclick="calculate()">Calculate</button>
    </form>
    <p id="result"></p>

    <script>
        function calculate() {
            const radius = parseFloat(document.getElementById('radius').value);
            if (isNaN(radius) || radius <= 0) {
                document.getElementById('result').innerText = "Please enter a valid radius.";
                return;
            }
            const circumference = 2 * Math.PI * radius;
            const area = Math.PI * radius * radius;
            document.getElementById('result').innerText = 
                `Circumference: ${circumference.toFixed(2)}, Area: ${area.toFixed(2)}`;
        }
    </script>
</body>
</html>